<!DOCTYPE html>
<html>

<head>
  <%- include(`${process.cwd()}/views/common/base/head.ejs`, {path: 'index', title: 'Home' }) %>
</head>

<body>
  <%- include(`${process.cwd()}/views/common/components/partial/header.ejs`) %>
  <div class="section__slide-main">
    <div class="swiper-container-main">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <a href="" class="link-blcok">
            <img src="/dist/assets/images/main/slide_01.jpg" alt="">
          </a>
        </div>
        <div class="swiper-slide">
          <a href="" class="link-blcok">
            <img src="/dist/assets/images/main/slide_02.jpg" alt="">
          </a>
        </div>
        <div class="swiper-slide">
          <a href="" class="link-blcok">
            <img src="/dist/assets/images/main/slide_03.jpg" alt="">
          </a>
        </div>
      </div>
      <!-- If we need navigation buttons -->
      <div class="section__slide-main__button-prev">
        <i class="material-icons">
          navigate_before
        </i>
      </div>
      <div class="section__slide-main__button-next">
        <i class="material-icons">
          navigate_next
        </i>
      </div>
    </div>
  </div>
  <div class="section__slide-part movie">
    <div class="wrap">
      <div class="section__title_box">
        <span class="line"></span>
        <h3 class="section__title strong">Top Rated Movie</h3>
      </div>
      <div class="swiper-container-part movie">
        <div class="swiper-wrapper">
          <% ratedMovieData.map(list => { %>
          <div class="swiper-slide">
            <a href="/movie/detail/<%= list.id %>" class="link-blcok">
              <img src="https://yts.tl<%= list.medium_cover_image %>" alt="<%= list.title%>">
            </a>
          </div>
          <% }) %>
        </div>
        <!-- If we need navigation buttons -->
        <div class="section__slide-part__button-prev">
          <i class="material-icons">
            navigate_before
          </i>
        </div>
        <div class="section__slide-part__button-next">
          <i class="material-icons">
            navigate_next
          </i>
        </div>
      </div>
    </div>
  </div>
  <div class="section__event">
    <div class="section__event__text_box">
    </div>
  </div>

  <div class="section__slide-part play">
    <div class="wrap">
      <div class="section__title_box">
        <span class="line"></span>
        <h3 class="section__title strong">Top Rated Play</h3>
      </div>
      <div class="swiper-container-part play">
        <div class="swiper-wrapper">
          <% perforList.map(list => { %>
          <div class="swiper-slide">
            <a href="/play/detail/<%= list.mt20id._text %>" class="link-block">
              <img src="<%= list.poster._text%>" alt="<%= list.prfnm._text%>">
            </a>
          </div>
          <% }) %>
        </div>
        <!-- If we need navigation buttons -->
        <div class="section__slide-part__button-prev">
          <i class="material-icons">
            navigate_before
          </i>
        </div>
        <div class="section__slide-part__button-next">
          <i class="material-icons">
            navigate_next
          </i>
        </div>
      </div>
    </div>
  </div>
  <div class="section__slide-part musical">
    <div class="wrap">
      <div class="section__title_box">
        <span class="line"></span>
        <h3 class="section__title strong">Top Rated Musical</h3>
      </div>
      <div class="swiper-container-part musical">
        <div class="swiper-wrapper">
          <% musicalList.map(list => { %>
            <div class="swiper-slide">
              <a href="/musical/detail/<%= list.mt20id._text %>" class="link-block">
                <img src="<%= list.poster._text%>" alt="<%= list.prfnm._text%>">
              </a>
            </div>
            <% }) %>
        </div>
        <!-- If we need navigation buttons -->
        <div class="section__slide-part__button-prev">
          <i class="material-icons">
            navigate_before
          </i>
        </div>
        <div class="section__slide-part__button-next">
          <i class="material-icons">
            navigate_next
          </i>
        </div>
      </div>
    </div>
  </div>
  <%- include(`${process.cwd()}/views/common/components/partial/footer.ejs`) %>
  <%- include(`${process.cwd()}/views/common/base/foot.ejs`, {path: 'index'}) %>
</body>

</html>
